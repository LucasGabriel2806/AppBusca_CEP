<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBusca_CEP.Menu">
    <ContentPage.Content>

        <Grid ColumnDefinitions="*, *"
              RowDefinitions="*, *, *, *">

            <Label Grid.Row="0" Grid.Column="0"
                   Grid.ColumnSpan="2" 
                   HorizontalOptions="Center"
                   FontSize="Body"
                   Text="Api Busca Cep --- O que você deseja buscar?" />

            <Button Grid.Row="1" Grid.Column="0" x:Name="BtnCepLogradouro"
                    Text="o Cep de um Logradouro" Clicked="BtnCepLogradouro_Clicked"/>

            <Button Grid.Row="1" Grid.Column="1" x:Name="BtnCidadesUf"
                    Text="as Cidades de um UF" Clicked="BtnCidadesUf_Clicked" />

            <Button Grid.Row="2" Grid.Column="0" x:Name="BtnBairrosCidade"
                    Text="os Bairros de uma Cidade" Clicked="BtnBairrosCidade_Clicked"/>

            <Button Grid.Row="2" Grid.Column="1" x:Name="BtnLogradourosBairro"
                    Text="os Logradouros de um Bairro" Clicked="BtnLogradourosBairro_Clicked"/>

            <Button Grid.Row="3" Grid.Column="0" x:Name="BtnEnderecoCep"
                    Text="o Endereço de um Cep" Clicked="BtnEnderecoCep_Clicked"/>


        </Grid>
    </ContentPage.Content>
</ContentPage>